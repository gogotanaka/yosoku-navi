

<%= auto_discovery_link_tag(:rss, "http://iblog.com") %>

<!--line-->
<div id="pan-navi" class="clearfix">
  <ol>
    <li class="arrow"><%= link_to "HOME", root_path %></li>
    <li><strong>仕手株速報</strong></li>
  </ol>
</div>

<div id="content" class="clearfix">
  <div id="content-box" class="clearfix">


<article id="main" class="clearfix">

  <div class="title-bar">
    <h1><img src="./img/title-bar-sitekabu-list.png" alt="仕手株速報" /></h1>
  </div>

  <ul class="sitekabu-list-content">
    <% Piece.order("created_at DESC").limit(5).each do |piece| %>
      <li>
        <h2><%= link_to piece.title, piece_path(piece.id) %></h2>
        <dl>
          <dt><%= complete_date(piece.updated_at + 32400) %></dt>
          <dd>
            <%= piece.contents.html_safe %>
          </dd>
          <dd>
            <%= link_to "続きを読む >>", piece_path(piece.id, title: piece.title) %>
          </dd>
        </dl>
      </li>
    <% end %>
  </ul>

  <%= will_paginate(@pieces, :prev_label=>'&#171;前', :next_label=>'次&#187;') %>
</article>