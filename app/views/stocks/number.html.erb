		<div id="pan-navi" class="clearfix">
			<ol>
				<li class="arrow"><a href="./index.html">HOME</a></li>
				<li class="arrow"><a href="./brand-list.html">銘柄一覧</a></li>
        <li>
          <strong><%= @number %>〜<%= @number + 499 %>台の銘柄一覧</strong></li>
			</ol>
		</div>
		<!--//pan-navi-->

		<!--content-->
		<div id="content" class="clearfix">

			<!--content-box-->
			<div id="content-box" class="clearfix">

				<!--main-->
				<article id="main" class="clearfix">

					<div class="title-bar">
						<h1><%= @number %>〜<%= @number + 499 %>台の銘柄一覧</h1>
					</div>

					<ul id="brand-menu" class="clearfix">
						<li id="brand-menu1" class="now"><span>コード別</span></li>
						<li id="brand-menu2"><span>市場別</span></li>
						<li id="brand-menu3"><span>業種別</span></li>
					</ul>

					<div class="brand-list-box">
            <table>
              <thead>
                <tr>
                  <th class="t-width-30">順位</th>
                  <th class="t-width-40">コード</th>
                  <th class="t-width-130">銘柄名</th>
                  <th class="t-width-40">市場</th>
                  <th class="t-width-70">株価</th>
                  <th class="t-width-70">株価<br />前日比</th>
                  <th class="t-width-70">出来高</th>
                  <th class="t-width-70">出来高<br />前日比</th>
                  <th class="t-width-70">信用買残</th>
                  <th class="t-width-70">信用売残</th>
                </tr>
              </thead>
              <tbody>
                <% @stocks.each.with_index(1) do |stock, i| %>
                  <tr>
                    <td><%= i +  @page.to_i * 30 %></td>
                    <td><%= stock.code %></td>
                    <td class="brand-name">
                      <%= link_to stock.name, stock_path(stock) %>
                    </td>
                    <td>
                      <%= stock.market %>
                    </td>
                    <td>
                      <%= stock.price %>
                    </td>
                    <td><%= compare(stock.previousprice, stock.price) %><br /></td>
                    <td>
                      <%= stock.volume %>
                    </td>
                    <td><%= compare(stock.previousvolume, stock.volume) %><br />
                      <% if false %>
                        (-4.19倍)
                      <% end %>
                    </td>
                    <td><%= stock.margin_buying %><br />
                      <% if false %>
                        <span class="down">(-6,352倍)</span>
                      <% end %>
                    </td>
                    <td><%= stock.margin_selling %><br />
                      <% if false %>
                        <span>(0倍)</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
				</article>
